---
import { projects } from "../../config/projecs.json";
---

<h2 class="text-2xl my-4">Projects</h2>
{
  projects.map((project) => (
    <div class="flex flex-col text-center my-3 md:text-left md:flex-row">
      <>
        <div class="flex-1 my-3 ">
          <h2 class="text-2xl my-4 ">{project.title}</h2>
          <p class="my-5">{project.description}</p>
          <button class="bg-indigo-500 px-3 hover:bg-indigo-400">
            more info
          </button>
        </div>
        <div class="flex-1 my-3">
          <img src={project.image} class="w-72 m-auto" />
        </div>
      </>
    </div>
  ))
}
